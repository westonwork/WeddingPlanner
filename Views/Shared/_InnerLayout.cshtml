<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeddingPlanner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeltReviewDemo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="d-flex justify-content-around m-4 gap-3">
                @* <div class="d-flex justify-content-around m-4"> *@
                <h2>Welcome, @Context.Session.GetString("FirstName")!</h2>
                <div class="d-flex justify-content-evenly gap-3">
                    <h4><a href="/weddings">Home</a></h4>
                    <h4>|</h4>
                    <h4><a href="/weddings/new">Plan A Wedding</a></h4>
                    <h4>|</h4>
                    <form asp-action="logout" asp-controller="Home" method="post">
                        <input type="submit" value="Logout" class="btn btn-primary">
                    </form>
                </div>
                @* </div> *@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WeddingPlanner 
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>